{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GAI XPrompt Workflow",
  "description": "Schema for gai xprompt workflow YAML files",
  "type": "object",
  "required": ["name", "steps"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Workflow identifier (used in #name syntax)"
    },
    "config": {
      "type": "object",
      "description": "Configuration options for automatic workflow resource management",
      "additionalProperties": false,
      "properties": {
        "claim_workspace": {
          "type": "boolean",
          "description": "Auto-manage workspace claiming/releasing",
          "default": false
        },
        "create_artifacts": {
          "type": "boolean",
          "description": "Auto-create artifacts directory",
          "default": false
        },
        "log_workflow": {
          "type": "boolean",
          "description": "Auto-initialize/finalize gai.md log",
          "default": false
        }
      }
    },
    "input": {
      "type": "array",
      "description": "List of input argument definitions",
      "items": {
        "type": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "The argument name (used for named args like name=value)"
          },
          "type": {
            "type": "string",
            "description": "The expected type of the argument value",
            "enum": ["word", "line", "text", "path", "int", "integer", "float", "bool", "boolean", "string"],
            "default": "line"
          },
          "default": {
            "description": "Default value if argument is not provided (null means required)"
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "description": "Ordered list of workflow steps to execute",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Step identifier (defaults to step_{index} if not specified)"
          },
          "agent": {
            "type": "string",
            "description": "XPrompt name to invoke (mutually exclusive with bash/python)"
          },
          "bash": {
            "type": "string",
            "description": "Bash command to execute (mutually exclusive with agent/python)"
          },
          "python": {
            "type": "string",
            "description": "Python code to execute (mutually exclusive with agent/bash)"
          },
          "prompt": {
            "type": "string",
            "description": "Prompt template for agent steps (supports Jinja2 and xprompt refs)"
          },
          "output": {
            "type": "object",
            "description": "Output specification for validating step responses",
            "required": ["type", "schema"],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "description": "The output format type",
                "enum": ["json_schema"]
              },
              "schema": {
                "type": "object",
                "description": "The schema definition (JSON Schema for json_schema type)",
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "JSON Schema type (object, array, etc.)"
                  },
                  "properties": {
                    "type": "object",
                    "description": "Property definitions for object schemas",
                    "additionalProperties": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "description": "Property type (word, line, text, path, string, or JSON Schema types)"
                        }
                      }
                    }
                  },
                  "items": {
                    "type": "object",
                    "description": "Item schema for array types"
                  },
                  "required": {
                    "type": "array",
                    "description": "List of required property names",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "hitl": {
            "type": "boolean",
            "description": "Whether to require human-in-the-loop approval",
            "default": false
          }
        },
        "oneOf": [
          {
            "required": ["agent"],
            "not": {
              "anyOf": [
                { "required": ["bash"] },
                { "required": ["python"] }
              ]
            }
          },
          {
            "required": ["bash"],
            "not": {
              "anyOf": [
                { "required": ["agent"] },
                { "required": ["python"] }
              ]
            }
          },
          {
            "required": ["python"],
            "not": {
              "anyOf": [
                { "required": ["agent"] },
                { "required": ["bash"] }
              ]
            }
          }
        ]
      }
    }
  }
}
