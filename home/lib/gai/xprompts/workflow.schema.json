{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GAI XPrompt Workflow",
  "description": "Schema for gai xprompt workflow YAML files",
  "type": "object",
  "required": ["name", "steps"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Workflow identifier (used in #name syntax)"
    },
    "xprompts": {
      "type": "object",
      "description": "Workflow-local xprompt definitions (highest priority within this workflow)",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "required": ["input", "content"],
            "additionalProperties": false,
            "properties": {
              "input": {
                "type": "object",
                "description": "Input parameters for the xprompt template"
              },
              "content": {
                "type": "string",
                "description": "Template content with Jinja2 placeholders"
              }
            }
          }
        ]
      }
    },
    "input": {
      "description": "Input argument definitions (array or object shorthand)",
      "oneOf": [
        {
          "type": "array",
          "description": "List of input argument definitions",
          "items": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "The argument name (used for named args like name=value)"
              },
              "type": {
                "type": "string",
                "description": "The expected type of the argument value",
                "enum": ["word", "line", "text", "path", "int", "integer", "float", "bool", "boolean", "string"],
                "default": "line"
              },
              "default": {
                "description": "Default value if argument is not provided (null means required)"
              }
            }
          }
        },
        {
          "type": "object",
          "description": "Object shorthand: { argName: type } or { argName: { type, default } }",
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string",
                "description": "Type shorthand (e.g., 'text', 'line')",
                "enum": ["word", "line", "text", "path", "int", "integer", "float", "bool", "boolean", "string"]
              },
              {
                "type": "object",
                "description": "Full definition with type and default",
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "The expected type of the argument value",
                    "enum": ["word", "line", "text", "path", "int", "integer", "float", "bool", "boolean", "string"]
                  },
                  "default": {
                    "description": "Default value if argument is not provided"
                  }
                }
              }
            ]
          }
        }
      ]
    },
    "steps": {
      "type": "array",
      "description": "Ordered list of workflow steps to execute",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Step identifier (defaults to step_{index} if not specified)"
          },
          "prompt": {
            "type": "string",
            "description": "Prompt template for prompt steps (supports Jinja2 and xprompt refs). Mutually exclusive with bash/python/prompt_part/parallel."
          },
          "bash": {
            "type": "string",
            "description": "Bash command to execute (mutually exclusive with prompt/python/prompt_part/parallel)"
          },
          "python": {
            "type": "string",
            "description": "Python code to execute (mutually exclusive with prompt/bash/prompt_part)"
          },
          "prompt_part": {
            "type": "string",
            "description": "Content to append to containing prompt when workflow is embedded. Mutually exclusive with prompt/bash/python/parallel. Cannot have control flow (if/for/repeat/while), output, or hitl."
          },
          "output": {
            "description": "Output specification for validating step responses",
            "oneOf": [
              {
                "type": "object",
                "description": "Full format with type and schema",
                "required": ["type", "schema"],
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "The output format type",
                    "enum": ["json_schema"]
                  },
                  "schema": {
                    "type": "object",
                    "description": "The schema definition (JSON Schema for json_schema type)",
                    "properties": {
                      "type": {
                        "type": "string",
                        "description": "JSON Schema type (object, array, etc.)"
                      },
                      "properties": {
                        "type": "object",
                        "description": "Property definitions for object schemas",
                        "additionalProperties": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "description": "Property type (word, line, text, path, string, or JSON Schema types)"
                            }
                          }
                        }
                      },
                      "items": {
                        "type": "object",
                        "description": "Item schema for array types"
                      },
                      "required": {
                        "type": "array",
                        "description": "List of required property names",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              {
                "type": "object",
                "description": "Object shorthand: { prop: type } or { prop: { type, default } }",
                "not": {
                  "required": ["type", "schema"]
                },
                "additionalProperties": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Type shorthand (e.g., 'text', 'word')"
                    },
                    {
                      "type": "object",
                      "description": "Full property definition with type and default",
                      "properties": {
                        "type": {
                          "type": "string",
                          "description": "The property type"
                        },
                        "default": {
                          "description": "Default value for the property"
                        }
                      }
                    }
                  ]
                }
              },
              {
                "type": "array",
                "description": "Array shorthand: [{ prop: type }] for array return types",
                "items": {
                  "type": "object",
                  "description": "Object shorthand for array items",
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "string",
                        "description": "Type shorthand"
                      },
                      {
                        "type": "object",
                        "description": "Full property definition",
                        "properties": {
                          "type": {
                            "type": "string"
                          },
                          "default": {}
                        }
                      }
                    ]
                  }
                }
              }
            ]
          },
          "hitl": {
            "type": "boolean",
            "description": "Whether to require human-in-the-loop approval",
            "default": false
          },
          "hidden": {
            "type": "boolean",
            "description": "If true, this step is hidden by default in the Agents tab TUI",
            "default": false
          },
          "if": {
            "type": "string",
            "description": "Jinja2 condition expression - step is skipped if false"
          },
          "for": {
            "type": "object",
            "description": "Loop iteration - maps variable names to list expressions",
            "additionalProperties": {
              "type": "string",
              "description": "Jinja2 expression that resolves to a list"
            }
          },
          "repeat": {
            "type": "object",
            "description": "Repeat-until loop configuration",
            "required": ["until"],
            "additionalProperties": false,
            "properties": {
              "until": {
                "type": "string",
                "description": "Jinja2 condition - loop stops when this becomes true"
              },
              "max": {
                "type": "integer",
                "description": "Maximum iterations before raising error",
                "default": 100,
                "minimum": 1
              }
            }
          },
          "while": {
            "oneOf": [
              {
                "type": "string",
                "description": "Jinja2 condition - loop continues while true (short form)"
              },
              {
                "type": "object",
                "description": "While loop configuration (long form)",
                "required": ["condition"],
                "additionalProperties": false,
                "properties": {
                  "condition": {
                    "type": "string",
                    "description": "Jinja2 condition - loop continues while true"
                  },
                  "max": {
                    "type": "integer",
                    "description": "Maximum iterations before raising error",
                    "default": 100,
                    "minimum": 1
                  }
                }
              }
            ]
          },
          "join": {
            "type": "string",
            "description": "How to collect iteration results",
            "enum": ["array", "text", "object", "lastOf"],
            "default": "array"
          },
          "parallel": {
            "type": "array",
            "description": "List of steps to run in parallel (mutually exclusive with prompt/bash/python)",
            "minItems": 2,
            "items": {
              "type": "object",
              "description": "Nested step within parallel block",
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Step identifier (must be unique within parallel block)"
                },
                "prompt": {
                  "type": "string",
                  "description": "Prompt template for prompt steps"
                },
                "bash": {
                  "type": "string",
                  "description": "Bash command to execute"
                },
                "python": {
                  "type": "string",
                  "description": "Python code to execute"
                },
                "output": {
                  "description": "Output specification for validating step responses",
                  "oneOf": [
                    {
                      "type": "object",
                      "description": "Full format with type and schema",
                      "required": ["type", "schema"],
                      "additionalProperties": false,
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["json_schema"]
                        },
                        "schema": {
                          "type": "object"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "description": "Object shorthand: { prop: type }",
                      "not": {
                        "required": ["type", "schema"]
                      },
                      "additionalProperties": {
                        "oneOf": [
                          { "type": "string" },
                          {
                            "type": "object",
                            "properties": {
                              "type": { "type": "string" },
                              "default": {}
                            }
                          }
                        ]
                      }
                    },
                    {
                      "type": "array",
                      "description": "Array shorthand: [{ prop: type }]",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "oneOf": [
                            { "type": "string" },
                            {
                              "type": "object",
                              "properties": {
                                "type": { "type": "string" },
                                "default": {}
                              }
                            }
                          ]
                        }
                      }
                    }
                  ]
                },
                "if": {
                  "type": "string",
                  "description": "Jinja2 condition expression - step is skipped if false"
                },
                "hidden": {
                  "type": "boolean",
                  "description": "If true, this step is hidden by default in the Agents tab TUI",
                  "default": false
                }
              },
              "oneOf": [
                { "required": ["prompt"] },
                { "required": ["bash"] },
                { "required": ["python"] }
              ]
            }
          }
        },
        "allOf": [
          {
            "oneOf": [
              {
                "required": ["prompt"],
                "not": {
                  "anyOf": [
                    { "required": ["bash"] },
                    { "required": ["python"] },
                    { "required": ["prompt_part"] },
                    { "required": ["parallel"] }
                  ]
                }
              },
              {
                "required": ["bash"],
                "not": {
                  "anyOf": [
                    { "required": ["prompt"] },
                    { "required": ["python"] },
                    { "required": ["prompt_part"] },
                    { "required": ["parallel"] }
                  ]
                }
              },
              {
                "required": ["python"],
                "not": {
                  "anyOf": [
                    { "required": ["prompt"] },
                    { "required": ["bash"] },
                    { "required": ["prompt_part"] },
                    { "required": ["parallel"] }
                  ]
                }
              },
              {
                "required": ["prompt_part"],
                "not": {
                  "anyOf": [
                    { "required": ["prompt"] },
                    { "required": ["bash"] },
                    { "required": ["python"] },
                    { "required": ["parallel"] },
                    { "required": ["if"] },
                    { "required": ["for"] },
                    { "required": ["repeat"] },
                    { "required": ["while"] },
                    { "required": ["output"] },
                    { "required": ["hitl"] }
                  ]
                }
              },
              {
                "required": ["parallel"],
                "not": {
                  "anyOf": [
                    { "required": ["prompt"] },
                    { "required": ["bash"] },
                    { "required": ["python"] },
                    { "required": ["prompt_part"] }
                  ]
                }
              }
            ]
          },
          {
            "not": {
              "anyOf": [
                { "required": ["for", "repeat"] },
                { "required": ["for", "while"] },
                { "required": ["repeat", "while"] },
                { "required": ["parallel", "repeat"] },
                { "required": ["parallel", "while"] },
                { "required": ["prompt_part", "for"] },
                { "required": ["prompt_part", "repeat"] },
                { "required": ["prompt_part", "while"] }
              ]
            }
          }
        ]
      }
    }
  }
}
