#!/bin/bash

source ~/lib/bugyi.sh

set -e

DATE=${DATE:-date}

function run() {
  if [[ "$1" == "-d" || "$1" == "--debug" ]]; then
    shift
    PS4='$LINENO: '
    set -x
  fi
  if [[ "$1" == "-v" || "$1" == "--verbose" ]]; then
    shift
    export VERBOSE=1
  fi

  log::info "Starting hourly 'bam' script runner..."
  log::info "Press Ctrl+C to stop"

  while true; do
    # Sleep for 60 seconds
    log::info "Sleeping for 60 seconds before checking time again..."
    sleep 60

    # Check if we're at the top of the hour
    current_min=$(${DATE} +%M)

    # If we're at the top of the hour, run 'bam'
    if [[ $current_min -eq 0 ]]; then
      log::info "Running 'bam' at $(${DATE})"
      for i in {1..5}; do
        bam
        if [[ $i -lt 5 ]]; then
          sleep 0.1
        fi
      done
    fi
  done
}

if [[ "${SCRIPTNAME}" == "$(basename "${BASH_SOURCE[0]}")" ]]; then
  run "$@"
fi
