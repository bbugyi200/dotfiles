#!/bin/bash

GAI_DIR="$HOME/lib/gai"
VENV_DIR="$GAI_DIR/venv"

if [[ ! -d "$VENV_DIR" ]]; then
    echo "Error: gai venv not found at $VENV_DIR. Run 'gai' once to initialize it."
    exit 1
fi

export PYTHONPATH="$GAI_DIR/src${PYTHONPATH:+:$PYTHONPATH}"
exec "$VENV_DIR/bin/python" "$GAI_DIR/src/gai_migrate_gp_to_yaml.py" "$@"
