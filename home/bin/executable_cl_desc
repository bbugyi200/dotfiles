#!/bin/bash

source ~/lib/bugyi.sh

export USAGE_GRAMMAR=(
  "[-v] [-s] [-r <revision>]"
  "-h"
)

read -r -d '' DOC <<EOM
$(usage)

Print the description of the current CL branch.

Optional Arguments
------------------
-h | --help
    View this help message.

-r <revision> | --revision <revision>
    Use the given revision instead of the current branch name.

-s | --short
    Output shortened description: removes the first word (e.g. [tag]),
    KEY=VALUE lines at the bottom, and trailing newlines.

-v | --verbose
    Enable verbose output. This option can be specified multiple times (e.g. -v, -vv, ...).

EOM

function run() {
  parse_cli_args "$@"

  local rev
  if [[ -n "$REVISION" ]]; then
    rev="$REVISION"
  else
    if [[ -z "$(branch_name)" ]]; then
      die "No CL branch currently checked out (use \`bb_hg_update <CL_NAME>\`)."
    fi
    rev="$(branch_name)"
  fi

  local desc
  desc=$(hg --pager=never log -r "$rev" --template '{desc}')

  if $SHORT; then
    # Remove first word, KEY=VALUE lines, and trailing newlines
    desc=$(echo "$desc" | sed '1s/^[^ ]* //' | sed '/^[A-Z_]*=.*/d')
    # Strip trailing newlines
    desc=$(echo "$desc" | sed -e :a -e '/^\n*$/{$d;N;ba' -e '}')
  fi

  echo "$desc"
}

function parse_cli_args() {
  log::debug "Command-Line Arguments: ($*)"

  eval set -- "$(getopt -o "h,r:,s,v" -l "help,revision:,short,verbose" -- "$@")"

  VERBOSE=0
  SHORT=false
  REVISION=""
  while [[ -n "$1" ]]; do
    case $1 in
    -h | --help)
      echo "${DOC}"
      exit 0
      ;;
    -r | --revision)
      shift
      REVISION="$1"
      ;;
    -s | --short)
      SHORT=true
      ;;
    -v | --verbose)
      VERBOSE=$((VERBOSE + 1))
      ;;
    --)
      shift
      break
      ;;
    esac
    shift
  done

  if [[ "${VERBOSE}" -gt 1 ]]; then
    PS4='$LINENO: '
    set -x
  fi

  readonly DOC
  readonly REVISION
  readonly SHORT
  readonly VERBOSE
}

if [[ "${SCRIPTNAME}" == "$(basename "${BASH_SOURCE[0]}")" ]]; then
  run "$@"
fi
