#!/bin/bash

set -x
gai run -c pokemon "Implement full functionality for the new AdUnit Pokemon field" \
  "Can you help me implement the full functionality (including tests) for the project described in the @~/bb/designs/foobar_pokemon.md design document?"
set +x

workspace_name=$(workspace_name)
if [[ "$(branch_name)" != "foobar_$workspace_name" ]]; then
  echo "[ERROR] The 'foobar_$workspace_name' CL was NOT created." >&2
  exit 1
fi

set -x
gai run split -y
set +x
