#!/bin/bash

# Wrapper around pylimit that only outputs the filenames with violations,
# warnings, or info notices, separated by spaces.

output=$(pylimit "$@" 2>&1)
ec=$?

files=$(echo "${output}" | grep -E '(VIOLATION|WARNING|FYI):' | sed 's/.*\(VIOLATION\|WARNING\|FYI\): \(.*\) has .*/\2/' | tr '\n' ' ' | sed 's/ $//')

if [[ -n "${files}" ]]; then
  echo "${files}"
fi

exit "${ec}"
