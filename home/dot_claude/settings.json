{
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "lua-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "DISABLE_INSTALLATION_CHECKS": "1"
  },
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "if [ -x \"$CLAUDE_PROJECT_DIR/tools/sase_bd\" ]; then \"$CLAUDE_PROJECT_DIR/tools/sase_bd\" prime; else bd prime; fi",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "uv run sase plan-approve",
            "timeout": 600
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "uv run sase user-question",
            "timeout": 600
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "if [ -x \"$CLAUDE_PROJECT_DIR/tools/sase_bd\" ]; then \"$CLAUDE_PROJECT_DIR/tools/sase_bd\" prime; else bd prime; fi",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "skipDangerousModePermissionPrompt": true
}
