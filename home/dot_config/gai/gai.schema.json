{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GAI Configuration",
  "description": "Configuration schema for gai.yml files",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "axe": {
      "type": "object",
      "description": "Configuration for the axe scheduler daemon",
      "additionalProperties": false,
      "properties": {
        "full_check_interval": {
          "type": "integer",
          "description": "Full check interval in seconds",
          "default": 300
        },
        "comment_check_interval": {
          "type": "integer",
          "description": "Comment check interval in seconds",
          "default": 60
        },
        "hook_interval": {
          "type": "integer",
          "description": "Hook check interval in seconds",
          "default": 1
        },
        "zombie_timeout_seconds": {
          "type": "integer",
          "description": "Zombie detection timeout in seconds. Hooks and CRS workflows running longer than this are marked as ZOMBIE.",
          "default": 7200
        },
        "max_runners": {
          "type": "integer",
          "description": "Maximum concurrent runners (hooks, agents, mentors) globally",
          "default": 5
        }
      }
    },
    "metahooks": {
      "type": "array",
      "description": "Metahooks intercept failing hooks before the summarize agent runs",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "hook_command", "output_regex"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique identifier for this metahook"
          },
          "hook_command": {
            "type": "string",
            "description": "The command that this metahook intercepts"
          },
          "output_regex": {
            "type": "string",
            "description": "Regex pattern to match in the hook output"
          }
        }
      }
    },
    "mentor_profiles": {
      "type": "array",
      "description": "Mentor profiles define which mentors to apply to which files",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["profile_name", "mentors"],
        "anyOf": [
          { "required": ["file_globs"] },
          { "required": ["diff_regexes"] },
          { "required": ["amend_note_regexes"] }
        ],
        "properties": {
          "profile_name": {
            "type": "string",
            "description": "Unique name for this mentor profile"
          },
          "mentors": {
            "type": "array",
            "description": "List of mentors to apply",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "oneOf": [
                { "required": ["xprompt"] },
                { "required": ["prompt"] }
              ],
              "properties": {
                "xprompt": {
                  "type": "string",
                  "description": "Reference to an xprompt (e.g., #mentor/aaa)"
                },
                "prompt": {
                  "type": "string",
                  "description": "Inline prompt text for the mentor"
                },
                "mentor_name": {
                  "type": "string",
                  "description": "Name for the mentor (required when using prompt)"
                },
                "run_on_wip": {
                  "type": "boolean",
                  "description": "Whether to run this mentor on WIP commits",
                  "default": false
                }
              }
            }
          },
          "file_globs": {
            "type": "array",
            "description": "Glob patterns to match files for this profile",
            "items": {
              "type": "string"
            }
          },
          "diff_regexes": {
            "type": "array",
            "description": "Regex patterns to match in the diff output",
            "items": {
              "type": "string"
            }
          },
          "amend_note_regexes": {
            "type": "array",
            "description": "Regex patterns to match in the amend note",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "llm_provider": {
      "type": "object",
      "description": "Configuration for the LLM provider abstraction layer",
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "description": "Name of the LLM provider to use (e.g., 'gemini', 'claude')",
          "default": "gemini"
        },
        "model_tier_map": {
          "type": "object",
          "description": "Mapping from model tiers to specific model identifiers",
          "properties": {
            "large": {
              "type": "string",
              "description": "Model identifier for the 'large' tier"
            },
            "small": {
              "type": "string",
              "description": "Model identifier for the 'small' tier"
            }
          }
        }
      }
    },
    "vcs_provider": {
      "type": "object",
      "description": "Configuration for the VCS provider abstraction layer",
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "description": "Name of the VCS provider ('git', 'hg', or 'auto' for auto-detection)",
          "enum": ["git", "hg", "auto"],
          "default": "auto"
        },
        "default_hooks": {
          "type": "array",
          "description": "Override the default required hooks added to new ChangeSpecs. Each entry is a hook command string (supports '!' and '$' prefixes).",
          "items": {
            "type": "string"
          }
        },
        "workspace_root": {
          "type": "string",
          "description": "Root directory for workspaces. Overridden by GAI_WORKSPACE_ROOT env var. Defaults to $HOME/workspace for git."
        }
      }
    },
    "xprompts": {
      "type": "object",
      "description": "Reusable text templates that can be referenced in prompts",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "required": ["input", "content"],
            "additionalProperties": false,
            "properties": {
              "input": {
                "type": "object",
                "description": "Input parameters for the xprompt template"
              },
              "content": {
                "type": "string",
                "description": "Template content with Jinja2 placeholders"
              }
            }
          }
        ]
      }
    }
  }
}
