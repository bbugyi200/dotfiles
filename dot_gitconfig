[init]
	templatedir = ~/.git_template
	defaultBranch = master
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = fugitive
[mergetool]
	keepBackup = false
[alias]
    ca = !sh -c 'git add -v --all && git commit -m \"$1\"' -
	co = checkout
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(auto)%s%C(reset) %C(auto)- %an%C(reset)%C(auto)%d%C(reset)'
[color]
	status = always
[diff]
	submodule = log
[github]
	user = bbugyi200
[pull]
	rebase = true
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
	branch = false
[delta]
    syntax-theme = GitHub
    navigate = true
[interactive]
    diffFilter = delta --color-only
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[user]
	email = bryanbugyi34@gmail.com
	name = Bryan Bugyi
[includeIf "gitdir:~/projects/work/"]
    path = ~/.gitconfig-work
[rerere]
	enabled = 1
	autoupdate = true
