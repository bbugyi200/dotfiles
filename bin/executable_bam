#!/bin/bash

source bugyi.sh

if [[ -n "$1" ]]; then
  count="$1"
  shift

  if ! [[ "${count}" =~ ^[0-9]+$ ]]; then
    die "USAGE: bam [count]\n\ncount MUST be an integer!"
  fi
else
  count=1
fi

for i in $(seq $count); do
  if [[ $i -gt 1 ]]; then
    sleep 1
    printf " "
  fi
  printf "BAM\a"
done
printf "\n"
