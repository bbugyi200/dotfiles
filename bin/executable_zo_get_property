#!/bin/bash

source bugyi.sh

HEAD="${HEAD:-head}"
SORT="${SORT:-sort}"
USAGE_GRAMMAR=(
  "[-v]"
  "[-v] [-F FILE] KEY"
  "-V"
  "-h"
)

read -r -d '' DOC <<EOM
$(usage)

Completion for zorg properties.

Positional Arguments
--------------------
KEY
    Output all values ever given for the KEY property. If no KEY is provided,
    output all keys.

Optional Arguments
------------------
-h | --help
    View this help message.

-F FILE | --file FILE
    Only fetch properties contained in FILE.

-v | --verbose
    Enable verbose output. This option can be specified multiple times (e.g. -v, -vv, ...).

-V | --get-all-values
    Output all values for all zorg properties.
EOM

function run() {
    parse_cli_args "$@"
    if [[ -n "${GET_ALL_VALUES}" ]]; then
      local query="select distinct pl.value from propertylink pl join property p on (p.id=pl.prop_id)"
    else
        if [[ -n "${KEY}" ]] && [[ -z "${FILE}" ]]; then
           local query="select distinct pl.value from propertylink pl join property p on (p.id=pl.prop_id) where p.name = '${KEY}'"
        elif [[ -n "${KEY}" ]] && [[ -n "${FILE}" ]]; then
          local zdir="$HOME/org"
          local zfile="${FILE/$zdir\//}"
          local zfile="${zfile/.zo/}"
          local query="select distinct pl.value from propertylink pl join property p on (p.id=pl.prop_id) join zorgnote n on pl.note_id=n.id join zorgfilelink fl on fl.note_id=n.id join zorgfile f on f.id=fl.zorg_file_id where p.name = '${KEY}' and f.path = '${zfile}.zo'"
        else
          local query="select distinct p.name from propertylink pl join property p on (p.id=pl.prop_id)"
        fi
    fi
    litecli -e "${query}" ~/org/.zorg/zorg.db | tac | ${HEAD} -n -1 | tac | ${SORT} -u
}

function parse_cli_args() {
    dmsg "Command-Line Arguments: ($*)"

    eval set -- "$(getopt -o "F:,h,v,V" -l "file:,help,verbose,get-all-values" -- "$@")"

    # shellcheck disable=SC2154
    read -r -d '' HELP <<EOM || [[ -n "${HELP}" ]]
${DOC}
EOM

    VERBOSE=0
    while [[ -n "$1" ]]; do
        case $1 in
        -F | --file)
            shift
            FILE="$1"
            ;;
        -h | --help)
            echo "${HELP}"
            exit 0
            ;;
        -v | --verbose)
            VERBOSE=$((VERBOSE + 1))
            ;;

        -V | --get-all-values)
            GET_ALL_VALUES=true
            ;;
        --)
            shift
            break
            ;;
        esac
        shift
    done

    if [[ "${VERBOSE}" -gt 1 ]]; then
        PS4='$LINENO: '
        set -x
    fi

    if [[ -n "${1}" ]]; then
        KEY="${1}"
        shift
    fi

    readonly DOC
    readonly FILE
    readonly HELP
    readonly VERBOSE
}

if [[ "${SCRIPTNAME}" == "$(basename "${BASH_SOURCE[0]}")" ]]; then
    run "$@"
fi
