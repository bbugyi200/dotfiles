#!/bin/bash

source bugyi.sh

USAGE_GRAMMAR=(
  "[-v] PRE_CHECK_SLEEP POST_NOTIFY_SLEEP"
  "-h"
)

read -r -d '' DOC <<EOM
$(usage)

Notify me when the current zorg pomodoro is complete.

Positional Arguments:
---------------------
PRE_CHECK_SLEEP
    the number of seconds to wait between calls to zo_pomodoro.

POST_NOTIFY_SLEEP
    the number of seconds to wait after a notification.

Optional Arguments
------------------
-h | --help
    View this help message.

-v | --verbose
    Enable verbose output. This option can be specified multiple times (e.g. -v, -vv, ...).
EOM

function run() {
    parse_cli_args "$@"
    local should_notify_send=true
    while true; do
      log::info \
        "Starting Loop: Every %d seconds, I will check if the current pomodoro is done." \
        $PRE_CHECK_SLEEP
      while true; do
        sleep $PRE_CHECK_SLEEP
        if [[ $(zo_pomodoro) == *'OVERDUE'* ]]; then
          break
        fi
        should_notify_send=true
      done

      log::info "Sending notifications since pomodoro is done!"
      notify_me "${should_notify_send}"
      should_notify_send=false

      log::info "Sleeping for %d seconds before restarting check loop." $POST_NOTIFY_SLEEP
      sleep $POST_NOTIFY_SLEEP
    done
}

function notify_me() {
  if [[ $# -ne 1 ]]; then
    log::error "usage: notify_me SHOULD_NOTIFY_SEND"
    return 1
  fi
  local should_notify_send="$1"
  shift

  log::info "Should notify send?: %s" "${should_notify_send}"
  if command -v notify-send &>/dev/null && [[ "${should_notify_send}" == true ]]; then
    notify-send -u critical 'zorg' 'Pomodoro is done!'
  fi

  for i in 0 1 2; do
    echo -e '\a'
    sleep 1
  done


}

function parse_cli_args() {
    dmsg "Command-Line Arguments: ($*)"

    eval set -- "$(getopt -o "h,v" -l "help,verbose" -- "$@")"

    # shellcheck disable=SC2154
    read -r -d '' HELP <<EOM || [[ -n "${HELP}" ]]
${DOC}
EOM

    VERBOSE=0
    while [[ -n "$1" ]]; do
        case $1 in
        -h | --help)
            echo "${HELP}"
            exit 0
            ;;
        -v | --verbose)
            VERBOSE=$((VERBOSE + 1))
            ;;
        --)
            shift
            break
            ;;
        esac
        shift
    done

    readonly DOC
    readonly HELP
    readonly VERBOSE

    if [[ "${VERBOSE}" -gt 1 ]]; then
        PS4='$LINENO: '
        set -x
    fi

    if [[ $# -ne 2 ]]; then
      die "$(usage)" 2
    fi

    PRE_CHECK_SLEEP="$1"
    shift

    POST_NOTIFY_SLEEP="$1"
    shift
}

if [[ "${SCRIPTNAME}" == "$(basename "${BASH_SOURCE[0]}")" ]]; then
    run "$@"
fi
